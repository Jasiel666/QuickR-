
@model  AplicacionPoe.Models.employeeO

@{
    ViewBag.Title = "Edit_view";
    Layout = "~/Views/Shared/_LayoutPagePrincipal.cshtml";
}

<body>

    <div class="mt-5">
        <div class="text-center mt-5 mb-2" style="font-family: 'Montserrat'; font-size: x-large; font-weight: 600; color: #8b17ff ">
            Empleado
        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center">
        <div class="bg-white p-5 rounded-5 align-items-center text-center" style="box-shadow: 0 2px 4px 0 rgba(0,0,0,.2); width: 50rem">
            <div class="align-items-center text-center">

                <form action="@Url.Action("Employee_edit","Principal") " method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <p style="color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500">
                            Imagen
                        </p>
                        <div class="text-center w-100 align-items-center mb-3" style="display:flex; align-items: center;  padding-left: 8rem">
                            <label for="formFile" class="form-label"></label>
                            <input class="form-control" type="file" id="formFile" accept="image/png, image/jpeg" name="image1" style="background-color: #edf0f7; color: #4e4f51; font-family: 'Montserrat'; font-size: small; 
                           font-weight: 500; border-radius: 1em; border: 0px solid; outline-color: #1e90ff; height: 3em">
                        </div>
                    </div>


                    <div class="mb-3">
                        <p style="color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500">
                            N° Empleado
                        </p>
                        <input class="text-center w-100 align-items-center mb-3" name="employee_id" type="number" value=@Html.DisplayFor(d => d.employee_id) style="background-color: #edf0f7; color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500; border-radius: 1em; border: 0px solid; outline-color: #1e90ff; height: 3em" readonly/>
                    </div>

                    <div class="mb-3">
                        <p style="color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500">
                            Nombre de Empleado
                        </p>
                        <input class="text-center w-100 align-items-center mb-3" name="e_name" type="text" value=@Html.DisplayFor(d=> d.e_name)
                               style="background-color: #edf0f7; color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500; border-radius: 1em; border: 0px solid; outline-color: #1e90ff; height: 3em" />
                    </div>

                    <div class="mb-3">
                        <p style="color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500">
                            Fecha de ingreso
                        </p>
                        <input class="w-100" type="date" name="e_admission_date" value=@Html.DisplayFor(d=> d.e_admission_date) style="background-color: #ddeeff; color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                        font-weight: 500; border-radius: .5em; border: 0px solid; outline-color: #1e90ff; height: 2em ">

                    </div>

                    <p style="color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500;">
                        Supervisor
                    </p>
                    <div class="mb-3 d-flex align-items-center justify-content-center text-center">
                        <input class="text-center w-100 align-items-center mb-3" name="e_supervisor" type="number" value=@Html.DisplayFor(d => d.e_supervisor) style="background-color: #edf0f7; color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500; border-radius: 1em; border: 0px solid; outline-color: #1e90ff; height: 3em" />
                            
                            
                     </div>


                    <p class="mt-4" style="color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500">
                        Constancia
                    </p>

                    <div class="mb-3 mt-4 d-flex align-items-center justify-content-center text-center">


                        <select class="form-select" name="e_certificate" style="background-color: #ddeeff; color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                        font-weight: 500; border-radius: .5em; border: 0px solid; outline-color: #1e90ff; height: 2em"
                                font-weight: 500;>
                            <option value="@Html.DisplayFor(d => d.e_certificate)">@Html.DisplayFor(d => d.e_certificate)</option>
                            <option value="Si">Si</option>
                            <option value="Si (Acuse)">Si (Acuse)</option>
                            <option value="No">No</option>
                            <option value="No Registrado">No Registrado</option>

                        </select>
                    </div>
                    <p style="color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500">
                        Observaciones
                    </p>

                    <div class="mb-3 text-center" style="display: flex; align-items: center">
                        <div class="form-group w-100" style="color: #4e4f51; font-family: 'Montserrat'; font-size: small; display: flex; align-items: center; text-align: center;
                             font-weight: 500; padding-left: 8rem">

                            <label for="e_observation" name="e_observation" style="background-color: #4ca6ff;"></label>
                            <textarea value=@Model.e_observation style="background-color: #edf0f7; border-radius: .5em; border: 0px solid; " class="form-control" name="e_observation" id="exampleFormControlTextarea1" rows="3">@Model.e_observation</textarea>
                        </div>
                    </div>
                    <p class="mb-3" style="color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500">
                        Activo
                    </p>
                    <div class="mb-3 d-flex align-items-center justify-content-center text-center">

                        <select class="form-select" name="e_active" style="background-color: #ddeeff; color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                        font-weight: 500; border-radius: .5em; border: 0px solid; outline-color: #1e90ff; height: 2em "
                                font-weight: 500;>
                            <option value="@Html.DisplayFor(d=> d.e_active)">@Html.DisplayFor(d => d.e_active)</option>
                            <option value="Si">Si</option>
                            <option value="No">No</option>

                        </select>


                    </div>
                    @if (ViewData["alertMessageRegister"] != null)
                    {
                        <div class="mt-5 text-center w-100 align-items-center">
                            <div class="label" style="background-color: #ff5555; font-family: 'Montserrat'; font-size: small; font-weight: 400 ">
                                @ViewData["alertMessageRegister"]
                            </div>
                        </div>

                    }

                    <div class="text-center align-items-center">
                        <div class="mt-3 text-center align-items-center">
                            <input class="botonRegister btn text-center align-items-center" type="submit" value="Actualizar"
                                   style="background-color: #1e90ff; color: white; font-family: 'Montserrat';
                                    font-size: small; font-weight: 700; border-radius: 2em; outline: none; height: 3em">
                        </div>

                    </div>


                </form>
            </div>
        </div>
    </div>
</body>
