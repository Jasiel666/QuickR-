@model AplicacionPoe.Models.clientO
    
@{ViewBag.Title = "Client_delete_view";
    Layout = "~/Views/Shared/_LayoutPagePrincipal.cshtml";
}

<div class="d-flex justify-content-center align-items-center mt-5 min-vh-100" style="background-color: #fff;">
    <div class="bg-dark p-5 rounded-5 align-items-center" style="box-shadow: 0 2px 4px 0 rgba(0,0,0,.2); width: 32rem">

        <div class="text-center" style="font-family: 'Montserrat'; font-size: large; font-weight: 600; color: #fff ">
            ¿Eliminar Cliente?
        </div>
        <div style="font-family: 'Montserrat'; font-size: small; font-weight: 600;">
            <div class="text-center" style="color: #ececec ">
                <div class="mt-4">
                    <p>
                        Id: @Html.DisplayFor(d => d.client_id)
                    </p>
                </div>

                <div class="mt-2">
                    <p>
                        Nombre Cliente: @Html.DisplayFor(d => d.client_name)
                    </p>
                </div>

                <div class="mt-2">
                    <p>
                        Numero Telefónico: @Html.DisplayFor(d => d.client_phone)
                    </p>
                </div>

            </div>
        </div>

        @{
            var client= Model.client_id;
        }

        <div class="text-center">

            <a class="btn mt-4 w-50" href="~/Principal/Client_delete/@client" style=" background-color: #1e90ff; color: white; font-family: 'Montserrat'; font-size: small; font-weight: 700; border-radius: 1em; outline: none;">
                Si
            </a>

            <a class="btn mt-4 w-50" href="~/Principal/Client_view" style=" background-color: #ff5555; color: white; font-family: 'Montserrat'; font-size: small; font-weight: 700; border-radius: 1em; outline: none;">
                No
            </a>


        </div>


    </div>
</div>