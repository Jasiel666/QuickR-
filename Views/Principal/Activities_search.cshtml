@model List<AplicacionPoe.Models.service12>
@{
    ViewBag.Title = "Activities_search";
    Layout = "~/Views/Shared/_LayoutPagePrincipal.cshtml";
}

<div class="mt-5">
    <table class="table table-striped table-hover mt-3 rounded rounded-3 overflow-hidden" style="border-radius: 4px">

        <thead style="background-color: #858585; color: white; font-family: 'Montserrat'; font-size: small; font-weight: 400; outline: none;">
            <tr>
                <th scope="col">N° Servicio</th>
                <th scope="col">Fecha de servicio</th>
                <th scope="col">Empleado que atendió</th>
                <th scope="col">Cliente atendido</th>
                <th scope="col">Actividad</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Model)
            {
                <tr style="font-family: Montserrat">
                    
                    <td>
                        @activity.service_id
                    </td>
                    <td>
                        @activity.service_date.ToString().Substring(0, 10)
                    </td>
                    <td>
                        @activity.employee_attend
                    </td>
                    <td>
                        @activity.client_attended
                    </td>
                    <td>
                        @activity.activity
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
    <a class="btn mt-4 w-50 align-items-center" href="~/Principal/Service_view" style=" background-color: #ff5555; color: white; font-family: 'Montserrat'; font-size: small; font-weight: 700; border-radius: 1em; outline: none;">
        Regresar
    </a>

</div>