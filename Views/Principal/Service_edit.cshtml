@model  AplicacionPoe.Models.service12

@{
    ViewBag.Title = "Service_register";
     Layout = "~/Views/Shared/_LayoutPagePrincipal.cshtml";
}

<style>
    .buttonRegister:hover {
        opacity: 0.8;
    }

    .buttonRegister:hover {
        opacity: 0.8;
    }


    .buttonBack:hover {
        opacity: 0.8;
    }

    .buttonBack:hover {
        opacity: 0.8;
    }
</style>
<div class="mt-5">
    <div class="text-center mt-5 mb-2" style="font-family: 'Montserrat'; font-size: x-large; font-weight: 600; color: #8b17ff ">
        Servicios
    </div>
</div>
<div class="d-flex justify-content-center align-items-center">

    <div class="bg-white p-5 rounded-5 align-items-center text-center" style="box-shadow: 0 2px 4px 0 rgba(0,0,0,.2); width: 50rem">
        <div class="align-items-center text-center">
            <form action="@Url.Action("Service_edit","Principal")" method="post">
                <div class="mb-3">
                   

                    <p style="color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500">
                        N° Servicio

                    </p>

                    <input class="text-center w-100 align-items-center mb-3" name="service_id" value="@Html.DisplayFor(d=>d.service_id)" type="number"
                           style="background-color: #edf0f7; color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500; border-radius: 1em; border: 0px solid; outline-color: #1e90ff; height: 3em" readonly/>
                </div>

                <div class="mb-3">
                    <p style="color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500">
                        Fecha de servicio
                    </p>

                    <input class="w-100" type="date" name="service_date" value="@Html.DisplayFor(d=>d.service_date)" style="background-color: #ddeeff; color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                        font-weight: 500; border-radius: .5em; border: 0px solid; outline-color: #1e90ff; height: 2em ">

                </div>
                <p style="color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500;">
                    Empleado que atendió
                </p>
                <div class="mb-3 d-flex align-items-center justify-content-center text-center">
                    <input class="text-center w-100 align-items-center mb-3" name="employee_attend" type="number" value="@Html.DisplayFor(d=>d.employee_attend)"
                           style="background-color: #edf0f7; color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500; border-radius: 1em; border: 0px solid; outline-color: #1e90ff; height: 3em" />
                </div>

                <p style="color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500;">
                    Cliente atendido
                </p>
                <input class="text-center w-100 align-items-center mb-3" name="client_attended" type="number" value="@Html.DisplayFor(d=>d.client_attended)"
                       style="background-color: #edf0f7; color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500; border-radius: 1em; border: 0px solid; outline-color: #1e90ff; height: 3em" />


                <p style="color: #4e4f51; font-family: 'Montserrat'; font-size: small;
                           font-weight: 500">
                    Observaciones
                </p>

                <div class="mb-3 text-center" style="display: flex; align-items: center">
                    <div class="form-group w-100" style="color: #4e4f51; font-family: 'Montserrat'; font-size: small; display: flex; align-items: center; text-align: center;
                             font-weight: 500; padding-left: 8rem">
                        <label for="activity" name="activity" style="background-color: #4ca6ff;"></label>
                        <textarea value=@Model.activity style="background-color: #edf0f7; border-radius: .5em; border: 0px solid; " class="form-control" name="activity" id="exampleFormControlTextarea1" rows="3">@Model.activity</textarea>
                    </div>
                </div>



                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="mt-5 text-center w-100 align-items-center">
                        <div class="label" style="background-color: #ff5555; font-family: 'Montserrat'; font-size: small; font-weight: 400 ">
                            @TempData["ErrorMessage"]
                        </div>
                    </div>

                }

                <div class="mt-5">
                    <input class="buttonRegister btn text-center align-items-center" type="submit" value="Actualizar"
                           style="background-color: #1e90ff; color: white; font-family: 'Montserrat';
                       font-size: small; font-weight: 700; border-radius: 2em; outline: none; height: 3em">
                </div>


            </form>


        </div>
    </div>
</div>

